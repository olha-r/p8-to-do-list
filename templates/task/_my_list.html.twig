
        {% for task in myTasks %}
            <div class="col-sm-4 col-lg-4 col-md-4 card-task">
                <div class="card">
                    <div class="card-body">
                        <h4 class="float-right">
                            {% if task.isDone %}
                                <span><i class="fa-solid fa-check icone-done"></i></span>
                            {% else %}
                                <span><i class="fa-solid fa-hourglass icone-not-done"></i></span>
                            {% endif %}
                        </h4>
                        <h4><a href="{{ path('task_edit', {'id' : task.id }) }}">{{ task.title }}</a></h4>
                        <p>{{ task.content }}</p>
                    </div>

                    <div class="card-btn">
                        <form action="{{ path('task_toggle', {'id' : task.id }) }}">
                                {% if not task.isDone %}
                            <button class="btn btn-sm float-right btn-not-done">Marquer comme faite</button>
                                {% else %}
                                    <button class="btn btn-sm float-right btn-done">Marquer non termin√©e</button>

                                {% endif %}
                        </form>
                        {{ include('task/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        {% endfor %}

